APP_ENV=local
APP_NAME=cherrypick
PORT=8000

MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=cp_user
MYSQL_DB=cherrypick

S3_BUCKET=cherrypick-item-crops
AWS_REGION=ap-northeast-2
AWS_ENDPOINT_URL=http://localhost:4566
GUEST_HMAC_SECRET=change_me
# Weather API
WEATHER_API_KEY=put_openweather_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Frankfurter API (ECB reference rates - no API key required)
FRANKFURTER_API_BASE_URL=https://api.frankfurter.dev
FRANKFURTER_TIMEOUT_SEC=5.0
FX_CACHE_TTL_LATEST_SEC=60
FX_CACHE_TTL_HISTORICAL_SEC=86400

# AirLabs (flight lookup)
AIRLABS_API_KEY=

# MOLIT World Airports dataset
MOLIT_AIRPORT_DATASET_ID=uddi:12f91d16-ea50-48d1-bdc3-abcdef123456
MOLIT_AIRPORT_BASE_URL=https://api.odcloud.kr/api/3051587/v1

REDIS_URL=redis://localhost:6379/0
CLIENT_ID_HEADER=X-Client-Id

GEMINI_MODEL=models/gemini-2.5-flash-lite

LLM_CLASSIFIER_ENABLED=true
LLM_CLASSIFIER_TEMPERATURE=0.0
LLM_CLASSIFIER_MAX_TOKENS=256
LLM_CLASSIFIER_TIMEOUT_SEC=8.0
LLM_CLASSIFIER_CACHE_TTL_SECONDS=604800
LLM_CLASSIFIER_CONFIDENCE_THRESHOLD=0.7
LLM_CLASSIFIER_L1_CACHE_SIZE=256

LLM_TIPS_ENABLED=true
LLM_TIPS_MODEL=models/gemini-2.5-flash-lite
LLM_TIPS_TEMPERATURE=0.2
LLM_TIPS_MAX_TOKENS=256
LLM_TIPS_TIMEOUT_SEC=6.0
